<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/descriptionProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/profile_backgournd"
        android:elevation="2dp"
        android:layout_margin="10dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/picProfile"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/utente4" />

        <TextView
            android:id="@+id/nameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picProfile"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif"
            android:text="Nome Cognome"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/birthdateProfile"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lines="2"
            android:text="Data di nascita"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birthdateProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif-light"
            android:text="Indirizzo - CittÃ "
            android:textSize="16sp" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="Email"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/telphoneProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-light"
            android:text="Numero di Telefono"
            android:textSize="16sp" />

        <Space
            android:id="@+id/spaceHolder"
            android:layout_width="10dp"
            android:layout_height="0dp"
            android:layout_below="@id/addressProfile"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="340dp"
        android:layout_height="266dp"
        android:layout_below="@id/descriptionProfile"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="315dp"
        android:background="@drawable/profile_backgournd"
        android:elevation="2dp"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:id="@+id/aboutYouCont"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#BDBDBD" />

            <ImageView
                android:id="@+id/otherUser"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/utente1" />

            <RatingBar
                android:id="@+id/ratingBarUser"
                style="@style/Widget.AppCompat.RatingBar.Indicator"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:layout_below="@+id/view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="9dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.5"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/contentRating"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/otherUser"
                android:layout_marginTop="14dp"
                android:text="sdkfdjvsasdkjkljdkadjksjf"
                android:textColor="#000" />

            <RelativeLayout
                android:id="@+id/aboutYouRect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/ratingBarUser"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/aboutYou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif"
                    android:text="Dicono su di te"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <RatingBar
                    android:id="@+id/ratingBarGeneral"
                    style="@android:style/Widget.Material.RatingBar.Indicator"
                    android:layout_width="175dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="7dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1.0" />


            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>