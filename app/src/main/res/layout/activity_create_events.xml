<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout1"
    android:fitsSystemWindows="true"
    tools:context="com.example.andreea.eat_and_meet.CreateEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/appbar_padding_top"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:hint="Nome Evento"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:hint="Nome Menù"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

    <EditText
        android:id="@+id/editTextindirizzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="#f2f2f2"
        android:ems="10"
        android:hint="Indirizzo: Via, città"
        android:inputType="textPersonName"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:background="#f2f2f2"
                android:ems="10"
                android:text="Data: gg/mm/aaa"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:clickable="true"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="#f2f2f2"
                android:ems="10"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:text="Ora: hh:mm"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:background="#f2f2f2"
            android:paddingStart="20dp"
            android:text="Tipo Cucina"
            android:textAlignment="viewStart" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_marginBottom="20dp"
            android:entries="@array/tipo_cucina"
            android:paddingStart="20dp" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_pranzo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="65dp"
                android:background="#f2f2f2"
                android:onClick="onRadioButtonClicked"
                android:paddingRight="10dp"
                android:text="Pranzo" />

        <RadioButton
            android:id="@+id/radio_cena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="#f2f2f2"
            android:onClick="onRadioButtonClicked"
            android:paddingRight="10dp"
            android:text="Cena" />
        </RadioGroup>

        <Button
            android:id="@+id/prosegui"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Prosegui" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_menu"
        app:menu="@menu/activity_navigation_menu_drawer" />

</android.support.v4.widget.DrawerLayout>