<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/template_event"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/template_event_title"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Nome Mio Evento"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/template_event_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_menu_camera"/>
        <TextView
            android:id="@+id/template_event_info"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="descrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizionedescrizione"/>
    </LinearLayout>
</LinearLayout>