<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/template_booked_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:id="@+id/template_booked_user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_menu_camera"/>

        <TextView
            android:id="@+id/template_booked_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:text="Nome Utente" />

        <TextView
            android:id="@+id/template_delete_booked_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:text="Cancella prenotazione"
            android:layout_marginBottom="30dp"
            />

</LinearLayout>